<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="sample.Controller"
          alignment="top_left"
          hgap="10" vgap="10"
          prefHeight="800.0" prefWidth="800.0">
    <ImageView fx:id="playerImage"

               fitHeight="150.0" fitWidth="200.0"
               pickOnBounds="true"
               preserveRatio="true" />
    <Button GridPane.rowIndex="50" GridPane.columnIndex="5" text="Melee" onAction="#Melee"> </Button>
    <Button GridPane.rowIndex="51" GridPane.columnIndex="5" text="Magic" onAction="#Melee"> </Button>
    <Button GridPane.rowIndex="52" GridPane.columnIndex="5" text="Defend" onAction="#Melee"> </Button>
    <Button GridPane.rowIndex="53" GridPane.columnIndex="5" text="Use Item" onAction="#Melee"> </Button>
    <Button GridPane.rowIndex="54" GridPane.columnIndex="5" text="Flee" onAction="#Melee"> </Button>
</GridPane>
